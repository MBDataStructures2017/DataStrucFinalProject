<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flexCards.AddSubject.AddSubjectViewController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="New Subject">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Name:  ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="inputLine" prefHeight="27.0" prefWidth="218.0" />
               </children>
            </HBox>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#addNewSubject" text="Create" textFill="#6fff00">
               <font>
                  <Font size="28.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
